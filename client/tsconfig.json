{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "checkJs": true,
    "strict": true,
    "noImplicitThis": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2018"
  },
  "include": [
    "src", "./src/@types/custom.d.ts"
  ]
}
